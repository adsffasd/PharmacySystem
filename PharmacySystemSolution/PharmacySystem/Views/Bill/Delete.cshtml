@model PharmacySystem.Models.Bill

@{
    ViewData["Title"] = "Delete Bill";
}

<div class="container mt-4">
    <h1 class="text-center">Delete Bill</h1>

    <h3 class="text-danger">Are you sure you want to delete this bill?</h3>
    <div>
        <h4>Bill Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Amount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Amount)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Name) <!-- Assuming Product has a Name property -->
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.Name) <!-- Assuming Customer has a Name property -->
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Account)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Account.Name) <!-- Assuming Account has a Name property -->
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
