@model PharmacySystem.Models.Inventory

@{
    ViewData["Title"] = "Delete Inventory";
}

<h1 class="text-center">Delete Inventory</h1>

<div class="container mt-4">
    <h3 class="text-center">Are you sure you want to delete this inventory item?</h3>
    <div class="mt-4">
        <h4 class="text-center">Inventory Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.LastUpdate)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.LastUpdate)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Product)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Product.Name)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" class="text-center mt-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
    </form>
</div>
